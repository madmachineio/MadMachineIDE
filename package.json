{
  "name": "mad-machine",
  "version": "0.2.3",
  "private": true,
  "productName": "MadMachine",
  "description": "MadMachine Application",
  "author": {
    "name": "admin",
    "email": "admin@madmachine.com"
  },
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run web:start\" \"npm run app:start\"",
    "app:start": "cross-env NODE_ENV=development node ./config/scripts/dev.app.js",
    "app:build": "cross-env NODE_ENV=production ENV=prod webpack --config ./config/webpack.electron.config.js --colors",
    "app:package": "cross-env ENV=prod electron-builder --dir",
    "app:publish": "npm run web:build && npm run app:build && cross-env ENV=prod electron-builder --platform=all",
    "app:publish:win": "npm run web:build && npm run app:build && cross-env ELECTRON_MIRROR=https://npm.taobao.org/mirrors/electron/ electron-builder --win",
    "app:publish:mac": "npm run web:build && npm run app:build && cross-env ENV=prod electron-builder --mac",
    "app:publish:linux": "npm run web:build && npm run app:build && cross-env ENV=prod electron-builder --linux",
    "web:start": "cross-env ENV=dev node ./config/scripts/start.js",
    "web:build": "cross-env ENV=prod node ./config/scripts/build.js",
    "web:test": "node ./config/scripts/test.js",
    "config:build": "node ./config/scripts/build.config.js",
    "postinstall": "electron-builder install-app-deps && node ./config/scripts/postinstall.js",
    "rebuild": "electron-rebuild -f -w serialport"
  },
  "build": {
    "asar": false,
    "productName": "MadMachine",
    "buildVersion": "1.0.0",
    "appId": "com.madmachine.app",
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "generic",
        "url": ""
      }
    ],
    "fileAssociations": [
      {
        "ext": "mmp",
        "icon": "resources/ext/mmswift"
      }
    ],
    "afterSign": "config/scripts/notarize.js",
    "mac": {
      "icon": "resources/logo/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "config/entitlements.mac.plist",
      "entitlementsInherit": "config/entitlements.mac.plist",
      "target": [
        "dmg"
      ],
      "files": [
        "dist/**/*",
        "sdk/mac/**/*",
        "package.json",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin"
      ]
    },
    "win": {
      "icon": "resources/logo/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "files": [
        "dist/**/*",
        "sdk/win/**/*",
        "package.json",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin"
      ]
    },
    "nsis": {
      "installerIcon": "resources/logo/install.ico",
      "uninstallerIcon": "resources/logo/install.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true,
      "include": "installer.nsh"
    },
    "dmg": {
      "icon": "resources/logo/install.icns",
      "background": "resources/imgs/macinstall.tiff",
      "window": {
        "width": 574,
        "height": 313
      }
    },
    "pkg": {
      "scripts": "../resources/build/pkg-scripts",
      "installLocation": "/Applications",
      "background": {
        "alignment": "bottomleft"
      },
      "allowAnywhere": true,
      "allowCurrentUserHome": true,
      "allowRootDirectory": true,
      "isVersionChecked": true,
      "isRelocatable": false,
      "overwriteAction": "upgrade"
    },
    "linux": {
      "icon": "resources/logo/icon.icns",
      "target": "deb",
      "category": "Development"
    }
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "chokidar": "^2.1.5",
    "download-github-release": "^0.3.2",
    "drivelist": "^8.0.10",
    "electron-compile": "^6.4.4",
    "electron-progressbar": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.0.6",
    "iconv-lite": "^0.4.24",
    "lodash": "^4.17.11",
    "node-localstorage": "^2.1.6",
    "node-pty": "^0.10.1",
    "serialport": "^9.0.7",
    "stat-mode": "^1.0.0",
    "strip-ansi": "^6.0.0",
    "sudo-prompt": "^9.0.0",
    "tiny-worker": "^2.3.0",
    "universal-analytics": "^0.4.23",
    "usb": "^1.6.2",
    "usb-detection": "^4.7.0",
    "uuid": "^8.3.2",
    "worker-nodes": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@svgr/webpack": "4.1.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "9.0.0",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.5",
    "babel-plugin-named-asset-import": "^0.3.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^7.0.2",
    "bfj": "6.1.1",
    "case-sensitive-paths-webpack-plugin": "2.2.0",
    "classnames": "^2.2.6",
    "codemirror": "^5.45.0",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "1.0.0",
    "dotenv": "^6.0.0",
    "dotenv-expand": "4.2.0",
    "electron": "^4.0.0",
    "electron-builder": "^22.4.1",
    "electron-notarize": "^1.0.0",
    "electron-prebuilt-compile": "4.0.0",
    "electron-rebuild": "^2.3.5",
    "eslint": "5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-loader": "2.1.1",
    "eslint-plugin-flowtype": "2.50.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.12.4",
    "eventemitter2": "^5.0.1",
    "file-loader": "2.0.0",
    "filehound": "^1.17.4",
    "fs-extra": "7.0.1",
    "html-webpack-plugin": "4.0.0-alpha.2",
    "identity-obj-proxy": "3.0.0",
    "intl": "^1.2.5",
    "jest": "23.6.0",
    "jest-pnp-resolver": "1.0.2",
    "jest-resolve": "23.6.0",
    "jest-watch-typeahead": "^0.2.1",
    "konfig": "^0.2.1",
    "mini-css-extract-plugin": "0.5.0",
    "mobx": "^5.9.4",
    "mobx-react": "^5.4.3",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "pnp-webpack-plugin": "1.2.1",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.5.0",
    "postcss-safe-parser": "4.0.1",
    "react": "^16.8.6",
    "react-app-polyfill": "^0.2.2",
    "react-custom-scrollbars": "^4.2.1",
    "react-dev-utils": "^8.0.0",
    "react-dom": "^16.8.6",
    "react-intl": "^2.8.0",
    "resolve": "1.10.0",
    "sass-loader": "7.1.0",
    "string-replace-loader": "^2.1.1",
    "style-loader": "0.23.1",
    "terser-webpack-plugin": "1.2.2",
    "url-loader": "1.1.2",
    "webpack": "4.28.3",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "3.1.14",
    "webpack-manifest-plugin": "2.0.4",
    "webpack-node-externals": "^1.7.2",
    "workbox-webpack-plugin": "3.6.3",
    "xterm": "^4.3.0",
    "xterm-addon-fit": "^0.3.0",
    "xterm-addon-search": "^0.3.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
